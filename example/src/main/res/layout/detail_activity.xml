<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:listbuddies="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix" />

    <com.jpardogo.android.listbuddies.ui.views.DrawInsetsFrameLayout
        android:id="@+id/insets_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        listbuddies:insetBackground="@color/inset" />


    <RelativeLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/llSetWallpaper"
        android:background="@drawable/btn_rounded_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50.0dip"
        android:layout_gravity="center_horizontal|bottom">

        <ImageView
            android:id="@+id/img"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:src="@drawable/ico_apply" />

        <TextView
            android:textSize="18.0dip"
            android:textColor="@color/white"
            android:paddingLeft="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set Walllpaper"
            android:layout_toRightOf="@+id/img" />
    </RelativeLayout>

</FrameLayout>